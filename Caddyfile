# Main blog site
yannmoisan.com, www.yannmoisan.com {
    root * /var/www/yannmoisan.com
    
    # Security headers (improved from your nginx config)
    header {
        X-Frame-Options SAMEORIGIN
        X-XSS-Protection "1; mode=block"
        X-Content-Type-Options nosniff
        Referrer-Policy no-referrer-when-downgrade
        # Stricter CSP without unsafe-inline
        Content-Security-Policy "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; script-src 'self'"
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
    }
    
    # Cache static assets (equivalent to your 168h nginx rule)
    @static {
        file
        path *.css *.js *.gif *.jpg *.jpeg *.png *.ico *.woff *.woff2 *.svg
    }
    header @static {
        Cache-Control "public, max-age=604800"  # 168h = 604800 seconds
        Pragma "public"
    }
    
    # No cache for HTML (equivalent to expires -1)
    @html {
        path *.html
    }
    header @html Cache-Control "no-cache, no-store, must-revalidate"
    
    # Handle root specifically (matching your rewrite rule)
    handle_path / {
        rewrite * /index.html
        file_server
    }
    
    # Jekyll-style routing for other paths
    try_files {path} {path}/ /index.html
    file_server
    
    # Error handling
    handle_errors {
        @404 expression {http.error.status_code} == 404
        handle @404 {
            rewrite * /index.html
            file_server
        }
    }
    
    # Enable compression (equivalent to nginx gzip)
    encode gzip
}

# Talks subdomain
talks.yannmoisan.com {
    root * /var/www/talks.yannmoisan.com
    
    # Same security headers
    header {
        X-Frame-Options SAMEORIGIN
        X-XSS-Protection "1; mode=block"
        X-Content-Type-Options nosniff
        Referrer-Policy no-referrer-when-downgrade
        Content-Security-Policy "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; script-src 'self'"
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
    }
    
    # Same caching rules
    @static {
        file
        path *.css *.js *.gif *.jpg *.jpeg *.png *.ico *.woff *.woff2 *.svg
    }
    header @static {
        Cache-Control "public, max-age=604800"
        Pragma "public"
    }
    
    @html path *.html
    header @html Cache-Control "no-cache, no-store, must-revalidate"
    
    # Standard Jekyll routing
    try_files {path} {path}/ /index.html
    file_server
    
    encode gzip
}