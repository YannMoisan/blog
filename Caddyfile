# Main blog site
# Defines virtual hosts for both www and non-www domains
yannmoisan.com, www.yannmoisan.com {
    # Sets document root where static files are served from
    root * /var/www/yannmoisan.com
    
    # Security headers (improved from your nginx config)
    header {
        X-Frame-Options SAMEORIGIN                           # Prevents clickjacking
        X-Content-Type-Options nosniff                       # Prevents MIME type sniffing
        Referrer-Policy no-referrer-when-downgrade          # Controls referrer info
        # Stricter CSP without unsafe-inline
        Content-Security-Policy "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; script-src 'self'"  # Restricts resource loading
        Strict-Transport-Security "max-age=31536000; includeSubDomains"  # Forces HTTPS for 1 year
    }
    
    # Cache static assets (equivalent to your 168h nginx rule)
    @static {
        file                                                 # Only match existing files
        path *.css *.js *.gif *.jpg *.jpeg *.png *.ico *.woff *.woff2 *.svg  # File extensions to cache
    }
    header @static {
        Cache-Control "public, max-age=604800"              # Cache for 7 days (168h)
    }
    
    # No cache for HTML (equivalent to expires -1)
    @html {
        path *.html                                          # Match HTML files
    }
    header @html Cache-Control "no-cache, no-store, must-revalidate"  # Never cache HTML
    
    # Jekyll-style routing for other paths
    try_files {path} {path}/ /index.html                     # Try file, then directory, then index.html
    file_server                                              # Serve files
    
    # Enable compression (equivalent to nginx gzip)
    encode gzip                                              # Enable gzip compression
}

# Talks subdomain
# Subdomain definition
talks.yannmoisan.com {
    # Different document root
    root * /var/www/talks.yannmoisan.com
    
    # Same security headers (identical to blog)
    header {
        X-Frame-Options SAMEORIGIN                           # Prevents clickjacking
        X-Content-Type-Options nosniff                       # Prevents MIME type sniffing
        Referrer-Policy no-referrer-when-downgrade          # Controls referrer info
        Content-Security-Policy "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src *; script-src 'self' 'unsafe-inline'"  # Restricts resource loading
        Strict-Transport-Security "max-age=31536000; includeSubDomains"  # Forces HTTPS for 1 year
    }
    
    # Same caching rules (identical to blog)
    @static {
        file                                                 # Only match existing files
        path *.css *.js *.gif *.jpg *.jpeg *.png *.ico *.woff *.woff2 *.svg  # File extensions to cache
    }
    header @static {
        Cache-Control "public, max-age=604800"              # Cache for 7 days (168h)
    }
    
    @html path *.html                                        # Match HTML files
    header @html Cache-Control "no-cache, no-store, must-revalidate"  # Never cache HTML
    
    # Standard Jekyll routing
    try_files {path} {path}/ /index.html                     # Jekyll fallback routing
    file_server                                              # Serve files
    
    encode gzip                                              # Compression
}